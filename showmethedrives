#!/bin/sh

blue='\e[0;34m'
red='\e[0;31m'
NC='\e[0m'

sudo btrfs fi show

echo -e "${blue}archRoot${NC}"
btrfs fi df /

echo -e "${blue}zed${NC}"
zpool list zed
echo ""
zfs list -r zed

if zpool list backup > /dev/null 2>&1; then
	echo -e "${blue}backup${NC}"
	zpool list backup
	echo ""
	zfs list -r backup
fi
